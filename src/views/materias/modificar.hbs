<div class="container p-4">
    <div class="row justify-content-center">
        <h1 class="text-center text-info">Modificar Materia</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <form action="/materias/modificar/{{materia.idmateria}}" method="POST" class="p-4 border rounded shadow-sm bg-light">
                <div class="form-group">
                    <label for="idmateria" class="font-weight-bold">Código de Materia</label>
                    <input 
                        type="text" 
                        id="idmateria" 
                        class="form-control" 
                        name="idmateria" 
                        value="{{materia.idmateria}}" 
                        placeholder="Ejemplo: M01" 
                        required 
                        autofocus readonly/>
                </div>
                <div class="form-group">
                    <label for="materia" class="font-weight-bold">Nombre de la Materia</label>
                    <input 
                        type="text" 
                        id="materia" 
                        class="form-control" 
                        name="materia" 
                        value="{{materia.materia}}" 
                        placeholder="Ejemplo: Física Avanzada" 
                        required />
                </div>
                <div class="form-group text-center">
                    <button class="btn btn-info btn-block">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>
