<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Modificar Materia</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <form method="POST" action="/materias/modificar/{{idmateria}}">
                <div class="form-group">
                    <input type="text" class="form-control" name="materia" value="{{materia}}" placeholder="Nombre de la materia" required autofocus />
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>
