<div class="container p-4">
    <div class="row justify-content-center">
        <h1 class="text-center text-info">Modificar Estudiante</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <form action="/estudiantes/modificar/{{estudiante.idestudiante}}" method="POST" class="p-4 border rounded shadow-sm bg-light">
                <div class="form-group">
                    <label for="idestudiante" class="font-weight-bold">Código del Estudiante</label>
                    <input 
                        type="text" 
                        id="idestudiante" 
                        class="form-control" 
                        name="idestudiante" 
                        placeholder="Ejemplo: 12345" 
                        value="{{estudiante.idestudiante}}" 
                        required 
                        autofocus />
                </div>
                <div class="form-group">
                    <label for="nombre" class="font-weight-bold">Nombre</label>
                    <input 
                        type="text" 
                        id="nombre" 
                        class="form-control" 
                        name="nombre" 
                        placeholder="Ejemplo: Juan" 
                        value="{{estudiante.nombre}}" 
                        required />
                </div>
                <div class="form-group">
                    <label for="apellido" class="font-weight-bold">Apellido</label>
                    <input 
                        type="text" 
                        id="apellido" 
                        class="form-control" 
                        name="apellido" 
                        placeholder="Ejemplo: Pérez" 
                        value="{{estudiante.apellido}}" 
                        required />
                </div>
                <div class="form-group">
                    <label for="email" class="font-weight-bold">Correo Electrónico</label>
                    <input 
                        type="email" 
                        id="email" 
                        class="form-control" 
                        name="email" 
                        placeholder="Ejemplo: juan.perez@email.com" 
                        value="{{estudiante.email}}" 
                        required />
                </div>
                <div class="form-group">
                    <label for="idcarrera" class="font-weight-bold">Carrera</label>
                    <select 
                        id="idcarrera" 
                        class="form-control" 
                        name="idcarrera" 
                        required>
                        <option value="" disabled>Seleccione una carrera</option>
                        {{#each lstCarreras}}
                        <option value="{{idcarrera}}" {{#eq idcarrera ../estudiante.idcarrera}}selected{{/eq}}>{{carrera}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="usuario" class="font-weight-bold">Usuario</label>
                    <input 
                        type="text" 
                        id="usuario" 
                        class="form-control" 
                        name="usuario" 
                        placeholder="Ejemplo: jperez" 
                        value="{{estudiante.usuario}}" 
                        required />
                </div>
                <div class="form-group text-center">
                    <button class="btn btn-info btn-block">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>
