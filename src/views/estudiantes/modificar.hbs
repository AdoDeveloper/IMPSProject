<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Modificar estudiante</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <form method="POST" action="/estudiantes/modificar/{{idestudiante}}">
                <div class="form-group">
                    <input type="text" class="form-control" name="nombre" value="{{nombre}}" placeholder="Nombre del estudiante" required autofocus />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="apellido" value="{{apellido}}" placeholder="Apellido del estudiante" required />
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="email" value="{{email}}" placeholder="Correo del estudiante" required />
                </div>
                <div class="form-group">
                    <select class="form-control" name="idcarrera" required>
                        <option value="">Seleccione una opci√≥n</option>
                        {{#each carreras}}
                            <option value="{{idcarrera}}" {{#eq idcarrera ../idcarrera}}selected{{/eq}}>{{carrera}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="usuario" value="{{usuario}}" placeholder="Usuario del estudiante" required />
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>
