<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Modificar Profesor</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <form method="POST" action="/profesores/modificar/{{idprofesor}}">
                <div class="form-group">
                    <input type="text" class="form-control" name="nombre" value="{{nombre}}" placeholder="Nombre del profesor" required autofocus />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="apellido" value="{{apellido}}" placeholder="Apellido del profesor" required />
                </div>
                <div class="form-group">
                    <input type="date" class="form-control" id="fecha_nacimiento" name="fecha_nacimiento" value="{{formatDateForInput fecha_nacimiento}}" required />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="profesion" value="{{profesion}}" placeholder="Profesión del profesor" required />
                </div>
                <div class="form-group">
                    <select class="form-control" name="genero" required>
                        <option value="">Seleccione una opción</option>
                        <option value="M" {{#eq genero 'M'}}selected{{/eq}}>Masculino</option>
                        <option value="F" {{#eq genero 'F'}}selected{{/eq}}>Femenino</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="email" value="{{email}}" placeholder="Correo del profesor" required />
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>
