<div class="container p-4">
    <div class="row justify-content-between">
        <h3>Carreras disponibles</h3>
        <a href="/carreras/agregar" class="btn btn-success">Agregar carrera</a>
    </div>
    <div class="row mt-4">
        <div class="col-sm-12">
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Carrera</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each carreras}}
                        <tr>
                            <th scope="row">{{idcarrera}}</td>
                            <td>{{carrera}}</td>
                            <td>
                                <a href="/carreras/modificar/{{idcarrera}}" class="btn btn-primary">Modificar</a>
                                <a href="/carreras/eliminar/{{idcarrera}}" class="btn btn-danger">Eliminar</a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>