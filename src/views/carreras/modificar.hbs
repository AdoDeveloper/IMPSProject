<div class="container p-4">
    <div class="row justify-content-center">
        <h1 class="text-center text-info">Modificar Carrera</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <form action="/carreras/modificar/{{carrera.idcarrera}}" method="POST" class="p-4 border rounded shadow-sm bg-light">
                <div class="form-group">
                    <label for="idcarrera" class="font-weight-bold">Código de Carrera</label>
                    <input 
                        type="text" 
                        id="idcarrera" 
                        class="form-control" 
                        name="idcarrera" 
                        value="{{carrera.idcarrera}}" 
                        placeholder="Ejemplo: I01" 
                        required 
                        autofocus />
                </div>
                <div class="form-group">
                    <label for="carrera" class="font-weight-bold">Nombre de la Carrera</label>
                    <input 
                        type="text" 
                        id="carrera" 
                        class="form-control" 
                        name="carrera" 
                        value="{{carrera.carrera}}" 
                        placeholder="Ejemplo: Ingeniería en Sistemas Computacionales" 
                        required />
                </div>
                <div class="form-group text-center">
                    <button class="btn btn-info btn-block">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>
