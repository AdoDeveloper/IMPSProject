<div class="container p-4">
    <div class="row justify-content-center">
        <h3>Modificar carrera</h3>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <form method="POST" action="/carreras/modificar/{{carrera.idcarrera}}">
                <div class="form-group">
                    <label for="idcarrera">ID de la carrera</label>
                    <input type="text" class="form-control" id="idcarrera" name="idcarrera" value="{{carrera.idcarrera}}" readonly>
                </div>
                <div class="form-group">
                    <label for="carrera">Nombre de la carrera</label>
                    <input type="text" class="form-control" id="carrera" name="carrera" value="{{carrera.carrera}}" placeholder="Nombre de la carrera" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>
