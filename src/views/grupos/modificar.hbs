<div class="container p-4">
    <div class="row justify-content-center">
        <h1 class="text-center text-info">Modificar Grupo</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <form method="POST" action="/grupos/modificar/{{grupo.idgrupo}}" class="p-4 border rounded shadow-sm bg-light">
                <!-- Campo para Número del Grupo -->
                <div class="form-group">
                    <label for="num_grupo" class="font-weight-bold">Número del Grupo</label>
                    <input 
                        type="text" 
                        class="form-control" 
                        id="num_grupo" 
                        name="num_grupo" 
                        value="{{grupo.num_grupo}}" 
                        placeholder="Ejemplo: 101" 
                        required />
                </div>

                <!-- Campo para Año -->
                <div class="form-group">
                    <label for="anio" class="font-weight-bold">Año</label>
                    <input 
                        type="number" 
                        class="form-control" 
                        id="anio" 
                        name="anio" 
                        value="{{grupo.anio}}" 
                        placeholder="Ejemplo: 2024" 
                        required />
                </div>

                <!-- Campo para Ciclo -->
                <div class="form-group">
                    <label for="ciclo" class="font-weight-bold">Ciclo</label>
                    <select class="form-control" id="ciclo" name="ciclo" required>
                        <option value="01" {{#eq grupo.ciclo "01"}}selected{{/eq}}>01</option>
                        <option value="02" {{#eq grupo.ciclo "02"}}selected{{/eq}}>02</option>
                    </select>
                </div>

                <!-- Campo para Materia -->
                <div class="form-group">
                    <label for="idmateria" class="font-weight-bold">Materia</label>
                    <select class="form-control" id="idmateria" name="idmateria" required>
                        {{#each lstMaterias}}
                        <option value="{{idmateria}}" {{#eq idmateria ../grupo.idmateria}}selected{{/eq}}>
                            {{materia}}
                        </option>
                        {{/each}}
                    </select>
                </div>

                <!-- Campo para Profesor -->
                <div class="form-group">
                    <label for="idprofesor" class="font-weight-bold">Profesor</label>
                    <select class="form-control" id="idprofesor" name="idprofesor" required>
                        {{#each lstProfesores}}
                        <option value="{{idprofesor}}" {{#eq idprofesor ../grupo.idprofesor}}selected{{/eq}}>
                            {{nombre}} {{apellido}}
                        </option>
                        {{/each}}
                    </select>
                </div>

                <!-- Botón de Actualizar -->
                <div class="form-group text-center">
                    <button class="btn btn-info btn-block">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>
