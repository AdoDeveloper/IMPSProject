<div class="container p-4">
    <div class="row justify-content-center">
        <h1 class="text-center text-primary">Agregar Grupo</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <form action="/grupos/agregar" method="POST" class="p-4 border rounded shadow-sm bg-light">
                <div class="form-group">
                    <label for="num_grupo" class="font-weight-bold">Número de Grupo</label>
                    <input 
                        type="text" 
                        class="form-control" 
                        name="num_grupo" 
                        id="num_grupo" 
                        placeholder="Ejemplo: 101" 
                        maxlength="3" 
                        minlength="1" 
                        required />
                </div>
                <div class="form-group">
                    <label for="anio" class="font-weight-bold">Año</label>
                    <input 
                        type="number" 
                        class="form-control" 
                        name="anio" 
                        id="anio" 
                        placeholder="Ejemplo: 2024" 
                        min="2000" 
                        max="2100" 
                        required />
                </div>
                <div class="form-group">
                    <label for="ciclo" class="font-weight-bold">Ciclo</label>
                    <input 
                        type="number" 
                        class="form-control" 
                        name="ciclo" 
                        id="ciclo" 
                        placeholder="Ejemplo: 1" 
                        min="1" 
                        max="3" 
                        required />
                </div>
                <div class="form-group">
                    <label for="idmateria" class="font-weight-bold">Materia</label>
                    <select class="form-control" name="idmateria" id="idmateria" required>
                        <option value="" disabled selected>Seleccione una materia</option>
                        {{#each lstMaterias}}
                        <option value="{{idmateria}}">{{materia}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="idprofesor" class="font-weight-bold">Profesor</label>
                    <select class="form-control" name="idprofesor" id="idprofesor" required>
                        <option value="" disabled selected>Seleccione un profesor</option>
                        {{#each lstProfesores}}
                        <option value="{{idprofesor}}">{{nombre}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-block">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>
