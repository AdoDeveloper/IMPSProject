<!-- Verificando que exista la variable global que indica mensaje exitoso -->
{{#if success}}
<script>
    document.addEventListener("DOMContentLoaded", function () {
        Swal.fire({
            icon: 'success',
            title: '¡Éxito!',
            text: '{{success}}',
            confirmButtonText: 'Aceptar'
        });
    });
</script>
{{/if}}

