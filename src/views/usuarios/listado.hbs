<div class="container p-4">
    <div class="row">
        <div class="col-sm-6">
            <h3>Listado de Usuarios</h3>
        </div>
        <div class="col-sm-6 text-right">
            <a href="/usuarios/agregar" class="btn btn-success">Agregar Usuario</a>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-sm-12">
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each usuarios}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{user_name}}</td>
                        <td>{{user_email}}</td>
                        <td>
                            <a href="/usuarios/modificar/{{id}}" class="btn btn-primary btn-sm">Modificar</a>
                            <a href="/usuarios/eliminar/{{id}}" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
